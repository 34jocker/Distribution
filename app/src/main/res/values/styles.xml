<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--这个为textview的样式-->
 <style name="register_tv">
     <item name="android:padding">15dp</item>
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">20sp</item>
     <item name="android:textColor">#000</item>
 </style>
    <!--这个为编辑框的样式-->
    <style name="register_et">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--表示全屏的布局样式-->
    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--宽覆盖窗体.高为包裹内容-->
    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--全包裹内容-->
    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="background">
        <item name="android:background">#E5E5E5</item>
    </style>
    <!--文字颜色-->
    <style name="textcolor">
        <item name="android:textColor">#a000</item>
    </style>
    <!--stopinfo页面的textview样式布局-->
    <style name="textview_stopinfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">#a000</item>
        <item name="android:textSize">18sp</item>
    </style>
<!--stopinfo 后面textview的样式类型-->
    <style name="textview_stopinfo_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <!--该样式是运用与fragmen页面的textview-->
<style name="fragment_textview">
    <item name="android:drawablePadding">7dp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_height">wrap_content</item>
</style>
    <!--配送详情的textview的样式-->
    <style name="distribution_textview">
   <item name="android:layout_marginTop">10dp</item>
   <item name="android:layout_width">wrap_content</item>
   <item name="android:layout_height">wrap_content</item>
   <item name="android:textSize">16sp</item>
   <item name="android:layout_below">@id/tv_distribution_1</item>
    </style>

    <style name="ll_twoline">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
